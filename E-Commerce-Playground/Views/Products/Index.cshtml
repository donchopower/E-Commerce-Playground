@model IEnumerable<Product>

@{
    ViewData["title"] = "List of Products";
}

    <div class="row">
        <div class="col-md-8 offset-md-2">

            <table>
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductPictureURL)</th>
                </tr>

                </thead>
               
                <tbody>
                
               
                    @foreach (var item in Model)
                    {
                      <tr>
                          <th>
                            <div class="align-items-lg-start"> <img class="rounded-circle" src="@item.ProductPictureURL"></img></div>
                          </th>
                      </tr>
                      <tr>
                          <div class="text-black"><h1>@item.ProductName</h1></div> 
                      </tr>
                           


                       
                    }
                

                </tbody>

            </table>


        </div>
    </div>